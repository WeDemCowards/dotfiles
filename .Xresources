!!! Opacity Options !!!
!URxvt*background: [90]#000000
!URxvt*depth: 32
!URxvt*foreground: #FFFFFF

!!! Font Options !!!
URxvt*font: xft:CascadiaMono-Regular:pixelsize=16:antialias=true
URxvt*boldFont: xft:CascadiaMono-Bold:pixelsize=16:antialias=true
URxvt*italicFont: xft:CascadiaMono-Italic:pixelsize=16:antialias=true
URxvt*boldItalicFont: xft:CascadiaMono-BoldItalic:pixelsize=16:antialias=true
!URxvt*letterSpace: -1

!!! Geometry !!!
URxvt.geometry: 400x400

!!! Padding !!!
URxvt.internalBorder: 12

!!! Disbling annoying features !!!
URxvt.scrollBar: false
URxvt.iso14755: false
URxvt.iso14755_52: false

!!! Mouse Size !!!
Xcursor.size: 26

!!! Extensions !!!
URxvt.perl-ext-common: default,resize-font
URxvt.keysym.C-minus: resize-font:smaller
URxvt.keysym.C-plus: resize-font:bigger
